<div class="row">
  <%= form_for @topic do |f| %>
    <div class="form-group col-md-7">
      <%= f.text_field :title, class: 'form-control', placeholder: "Enter topic title" %>
    </div>
    <div class="form-group col-md-1">
      <%= f.submit "Save", class: 'btn btn-success todo-submit' %>
    </div>
  <% end %>
</div>
