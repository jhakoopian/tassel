<div class="row">
  <%= form_for [topic, bookmark] do |f| %>
    <div class="form-group col-md-7">
      <%= f.text_field :url, class: 'form-control', placeholder: "Enter bookmark url" %>
    </div>
    <div class="form-group col-md-1">
      <%= f.submit "Save", class: 'btn btn-primary todo-submit' %>
    </div>
  <% end %>
</div>
